t---
import FormattedDate from '../components/FormattedDate.astro';
const { data } = Astro.props;
---
<article class="grid grid-flow-row-dense grid-cols-3 grid-rows-3">
	<section class="prose" class="col-span-3">
	  <div class="box-content p-4 m-4 bg-sky-300" >
		  {data.heroImage && <img width={1020} src={data.heroImage} alt=""  class="inline"/>}
	  </div>
		<div class="title">
			<div class="date text-lg">
				<FormattedDate date={data.pubDate} />
				{
					data.updatedDate && (
						<div class="last-updated-on">
							Last updated on <FormattedDate date={data.updatedDate} />
						</div>
					)
				}
			</div>
			<h3 class="text-2xl">{data.title}</h3>
		</div>
		<slot />
	</section>
</article>
